# Email settings
# Gmail SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USE_SSL=false
SMTP_USER=your_gmail_address@gmail.com
SMTP_PASSWORD=your_app_password
EMAIL_TO=recipient@example.com
EMAIL_FROM=your_gmail_address@gmail.com

# Filtering
# When FILTER_BY_LOCATION=true, only matches LOCATION_ALLOWLIST entries.
# When FILTER_BY_LOCATION=false, default Canada detection is used.
FILTER_BY_LOCATION=true
# Comma-separated list of allowed locations (optional)
LOCATION_ALLOWLIST=Canada,Remote (Canada),Remote (Canada/US)
# Optional comma-separated keywords to include/exclude (case-insensitive)
INCLUDE_KEYWORDS=software,engineer,backend,frontend,fullstack
EXCLUDE_KEYWORDS=data,ml,security,qa

# Lookback window for commit diffing (hours)
LOOKBACK_HOURS=24
# Source branch of the internships repo (dev by default)
SOURCE_BRANCH=dev
